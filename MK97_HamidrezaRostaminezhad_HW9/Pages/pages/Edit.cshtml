@page "/product/edit/{id}"
@model MK97_HamidrezaRostaminezhad_HW9.Pages.pages.EditModel
@{
    var PhotoImg = "/img/" + (@Model.product.PhotoUrl ?? "noimage.jpg");
}

<section class="bg-light">
    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mt-5">
                <img class="cart-img-top img-thumbnail" src="@PhotoImg">
            </div>
            <div class="col-lg-7 mt-5">
                <div class="card" style="padding:30px">
                    <form method="post" class="mt-3" id="frmContact" enctype="multipart/form-data">
                        <input type="hidden" asp-for="@Model.product.Id" />
                        <label>Name :</label> <span asp-validation-for="@Model.product.ProductName" style="color:red ; font-weight: bold;"></span>
                        <input type="text" class="form-control" asp-for="@Model.product.ProductName" style="margin-bottom:5px">
                        <label>Barcode :</label> <span asp-validation-for="@Model.product.Barcode" style="color:red ; font-weight: bold;"></span>
                        <input type="text" class="form-control" asp-for="@Model.product.Barcode" style="margin-bottom:5px">
                        <label>Short Description :</label><span asp-validation-for="@Model.product.ShortDescription" style="color:red ; font-weight: bold;"></span>
                        <input type="text" class="form-control" asp-for="@Model.product.ShortDescription" style="margin-bottom:5px">
                        <label>Price :</label><span asp-validation-for="@Model.product.Price" style="color:red ; font-weight: bold;"></span>
                        <input type="text" class="form-control" asp-for="@Model.product.Price" style="margin-bottom:5px">
                        <label>Description :</label><span asp-validation-for="@Model.product.Description" style="color:red ; font-weight: bold;"></span>
                        <textarea asp-for="@Model.product.Description" class="form-control">@Model.product.Description style="margin-bottom:5px</textarea>
                        <label>Photo Url :</label><span asp-validation-for="@Model.product.PhotoUrl" style="color:red ; font-weight: bold;"></span>
                        <input hidden asp-for="product.PhotoUrl" />
                        <input type="file" asp-for="Photo" parsley-trigger="change" required class="custom-file-input form-control" id="Url" style="margin-bottom:5px">
                        <div class="row pb-3" style="margin-bottom:5px" style="margin-bottom:5px">
                            <div class="col d-grid">
                                <button class="btn btn-success btn-lg" onclick="confirm('are you shore about edits?')">Update</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
</section>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("Change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}


