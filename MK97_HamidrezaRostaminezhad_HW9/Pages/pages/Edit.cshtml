@page "/product/edit/{id}"
@model MK97_HamidrezaRostaminezhad_HW9.Pages.pages.EditModel
@{
    var PhotoImg = "/img/" + (@Model.product.PhotoUrl ?? "noimage.jpg");
}

<form method="post" class="mt-3" id="frmContact" enctype="multipart/form-data">

    <input type="hidden" asp-for="@Model.product.Id" />
    <input type="text" asp-for="@Model.product.ProductName" />
    <input type="text" asp-for="@Model.product.Description" />
    <div class="form-group">
    <label for="" class="custom-file-label"> آپلود تصویر *</label>
    <input hidden asp-for="product.PhotoUrl" />
    <input type="file" asp-for="Photo" parsley-trigger="change" required
           placeholder="بارکد محصول را وارد کنید" class="custom-file-input form-control" id="Url">

    </div>
    <div class="form-group">
        <label for="Url"> تصویر محصول *</label>
        <img src="@PhotoImg" width="150px" />
    </div>

    <button type="submit">update</button>

</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("Change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}


